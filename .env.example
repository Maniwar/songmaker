# Required API Keys
ANTHROPIC_API_KEY=sk-ant-your-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Optional: AssemblyAI API key for cloud transcription
ASSEMBLYAI_API_KEY=your-assemblyai-key-here

# Optional: HuggingFace token for speaker diarization
HF_TOKEN=hf_your-token-here

# Optional: fal.ai API key for Kling lip sync (paid, faster than free Wan2.2-S2V)
# Get your key at https://fal.ai/dashboard/keys
FAL_KEY=fal_your-key-here

# Transcription Backend: "whisperx" (local) or "assemblyai" (cloud)
TRANSCRIPTION_BACKEND=whisperx

# Lip Sync Backend: "wan2s2v" (free, slow ~10min/scene) or "kling" (paid, fast ~1-2min/scene)
LIP_SYNC_BACKEND=wan2s2v

# WhisperX Configuration
WHISPER_MODEL=large-v3
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=float32
WHISPER_BATCH_SIZE=16

# Video Configuration
VIDEO_RESOLUTION=1920x1080
VIDEO_FPS=30

# Image Generation
DEFAULT_ART_STYLE=cinematic digital art, dramatic lighting, 8k quality

# Output Directories (relative to project root)
OUTPUT_DIR=output
